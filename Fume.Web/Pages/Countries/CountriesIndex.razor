@page "/Countries"
@inject IRepository repository
<h3>Paises</h3>

<a class="btn btn-primary" href="/countries/Create" > Nuevo Pais</a>

<GenerecList Mylist="countries">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>País</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in countries)
                {
                    <tr>
                        <td>
                            <a class="btn btn-warning" href="/Countries/edit/@country.Id ">Editar</a>
                            <button class="btn btn-danger">Borrar</button>
                        </td>
                        <td>
                            @country.Name
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenerecList>

@if (countries is null)
{
    <p>Cargando...</p>
}
else
{

}


@code {
    public List<Country>? countries { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var responseHttp = await repository.Get<List<Country>>("/api/countries");
        countries = responseHttp.Response;
    }
}
